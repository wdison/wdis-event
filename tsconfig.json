{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",

    "declaration": true,

    // "lib": ["es6"], 
    // "rootDir": "src", 
    // "resolveJsonModule": true,
    // "allowJs": true,
    // "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true
  },
}